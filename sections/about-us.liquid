{% comment %} <section class="about"> {% endcomment %}

	<div class="container">
	  <ul class="about__navigation navigation">
	
		{% comment %} {% for i in (1..3) %}
			{{ i }}
		{% endfor %} {% endcomment %}

		{% for block in section.blocks %}
		<li class="navigation__item">
		
		  <a class="navigation__link" href="{{ block.settings.navlink_url }}" data-slide="">
			{{ block.settings.navlink_title }}
		  </a>
		</li>
		{% endfor %}

	  </ul>

	  <div class="about__slider-controls slider-controls">
		<button type="button" class="slider-controls__control  slider-controls__control_prev">
			{% render 'favorite-slider-arrow' %}
		  <span class="slider-controls__fallback-text">Arrow left</span>
		</button>
		<button type="button" class="slider-controls__control  slider-controls__control_next">
			{% render 'favorite-slider-arrow' %}
		  <span class="slider-controls__fallback-text">Arrow right</span>
		</button>
	  </div>

	  <ul class="about__slider-list">

		{% for block in section.blocks %}
		<li class="about__slider-item" {{ block.shopify_attributes }}>

		  <div class="about__slider-header">
			<h3 class="about__slider-title title">
				{{ block.settings.about_title }}
			</h3>

			<p class="about__slider-description">
				{{ block.settings.about_description }}
			</p>
		  </div>

		  <picture class="about__slider-picture">
			<source srcset="/assets/about-image-1-768.png" media="(max-width: 768px)">
			<source srcset="" media="(max-width: 424px)">
			<img width="" height="" src="{{ block.settings.slider_img | image_url: width: 1062, height: 597 }}" alt="{{ block.settings.slider_img.alt }}" loading="lazy">
		  </picture>

		  <a class="about__slider-link" href="{{ block.settings.link_url }}">
			{{ block.settings.link_title }}
		  </a>

		</li>
		{% endfor %}

	  </ul>

	  <ul class="about__mobile-slider-list">
		<li class="about__mobile-slider-item">
		  <!-- For resolution 750px -->
		  <ul class="about__navigation-mobile navigation-mobile">
