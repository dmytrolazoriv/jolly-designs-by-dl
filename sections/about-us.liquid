  {% schema %}
  {
	"name":"About us section",
	"tag":"section",
	"class":"about",
	"max_blocks":3,
	"settings":[
	],
	"blocks":[
	   {
		  "name":"Slider item",
		  "type":"slider_item",
		  "settings":[
				{
				   "type":"header",
				   "content":"Navigation settings"
				},
				{
				   "type":"text",
				   "id":"navlink_title",
				   "label":"Add text for link",
				   "default":"Meet the Jolly Family"
				},
				{
				   "type":"url",
				   "id":"navlink_url",
				   "label":"Add url for navigation"
				},
				{
				   "type":"header",
				   "content":"Slider settings"
				},
				{
				   "type":"text",
				   "id":"about_title",
				   "label":"Add text for slider title",
				   "default":"Meet the Jolly Family!"
				},
				{
				   "type":"text",
				   "id":"about_description",
				   "label":"Add text description for slider",
				   "default":"About our story, values & mission"
				},
				{
				   "type":"image_picker",
				   "id":"slider_img",
				   "label":"Add image for slider"
				},
				{
				   "type":"url",
				   "id":"link_url",
				   "label":"Add url for slider"
				},
				{
				   "type":"text",
				   "id":"link_title",
				   "label":"Add text for button",
				   "default":"learn more"
				}
		  ]
	   }
	],
	"presets":[
		{
		   "name":"About us section"
		}
	 ]
 }
{% endschema %}
