{% style %}
.favorite-cards__item.favorite-cards__item-left {
	color: {{ section.settings.color_cards_left_text }};
    background-color: {{ section.settings.color_cards_left_bg }};
}

.favorite-cards__item-right {
    color: {{ section.settings.color_cards_right_text }};
    background-color: {{ section.settings.color_cards_right_bg }};
}

@media screen and (max-width: 425px) {
	.favorite {
		overflow-x: hidden;
	}
}

{% endstyle %}


{% comment %} <section class="favorite"> {% endcomment %}
	<!-- <div class="container"> -->
	<div class="favorite-slider__controls">
	  <button type="button" class="favorite-slider__control favorite-slider__control_prev">
		{% render 'favorite-slider-arrow' %}
		<span class="favorite-slider__fallback-text">Arrow left</span>
	  </button>
	  <button type="button" class="favorite-slider__control favorite-slider__control_next">
		{% render 'favorite-slider-arrow' %}
		<span class="favorite-slider__fallback-text">Arrow right</span>
	  </button>
	</div>
	<div class="favorite__inner">
	  <ul class="favorite__cards favorite-cards">

		{% for block in section.blocks %}
		<li class="favorite-cards__item" {{ block.shopify_attributes }}>
		  <picture class="favorite-cards__image">
			<source media="(max-width:768px)" srcset="/assets/favorite-img-1-768.png">
			<img width="" height="" class="cards__image" src="{{ block.settings.favorite_img | image_url: width: 300,
				height: 298 }}" alt="{{ block.settings.favorite_img.alt }}" loading="lazy">
		  </picture>
		  <p class="favorite-cards__subtitle">
			{{ block.settings.favorite_subtitle | escape }}
		  </p>
		  <div class="favorite-cards__rating">
			<div class="star-rating">
			  <span class="icon-star">
				<span class="icon-star">
				  <span class="icon-star">
					<span class="icon-star">
					  <span class="icon-star">
					  </span>
					</span>
				  </span>
				</span>
			  </span>
			</div>
		  </div>
		  <h4 class="favorite-cards__title">
			{{ block.settings.favorite_title | escape }}
		  </h4>
		  <p class="favorite-cards__description">
			{{ block.settings.favorite_description | escape }}
		  </p>
		</li>
		{% endfor %}

	  </ul>
	</div>
	<!-- </div> -->
  {% comment %} </section> {% endcomment %}

  {% schema %}
  {
	"name":"Favorite section",
	"tag":"section",
	"class":"favorite",
	"settings":[
		{
			"type": "header",
			"content": "t:sections.footer.settings.favorite_card_left_header.content",
			"info": "t:sections.footer.settings.favorite_card_left_header.info"
		  },
		  {
			"type": "color",
			"id": "color_cards_left_text",
			"label": "t:sections.footer.settings.color_cards_left_text.label",
			"default": "#ffffff"
		  },
		  {
			"type": "color",
			"id": "color_cards_left_bg",
			"label": "t:sections.footer.settings.color_cards_left_bg.label",
			"default": "#ff8f8f"
		  },
		  {
			"type": "header",
			"content": "t:sections.footer.settings.favorite_card_right_header.content",
			"info": "t:sections.footer.settings.favorite_card_right_header.info"
		  },
		  {
			"type": "color",
			"id": "color_cards_right_text",
			"label": "t:sections.footer.settings.color_cards_right_text.label",
			"default": "#105393"
		  },
		  {
			"type": "color",
			"id": "color_cards_right_bg",
			"label": "t:sections.footer.settings.color_cards_right_bg.label",
			"default": "#cee8ff"
		  }
	],
	"max_blocks":4,
	"blocks":[
	   {
		  "name":"Favorite product item",
		  "type":"favorite_item",
		  "settings":[
			 {
				"type":"header",
				"content":"Image settings"
			 },
			 {
				"type":"image_picker",
				"id":"favorite_img",
				"label":"Add image for favorite product"
			 },
			 {
				"type":"header",
				"content":"Text settings"
			 },
			 {
				"type":"text",
				"id":"favorite_subtitle",
				"label":"Add subtitle for favorite product",
				"default":"The Favorite Over Partners"
			 },
			 {
				"type":"text",
				"id":"favorite_title",
				"label":"Add title for favorite product",
				"default":"Angelina Bork"
			 },
			 {
				"type":"text",
				"id":"favorite_description",
				"label":"Add description for favorite product",
				"default":"Brings' color in the children's room but also ideally suited for the living room or bedroom. With our hand-woven wall rug, the home becomes even more of a feel-good oasis."
			 }
			]
		  }
	   ],
	   "presets":[
		  {
			 "name":"Favorite section"
		  }
	   ]
	}
  {% endschema %}
